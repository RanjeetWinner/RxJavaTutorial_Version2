<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/popularMoviesFragment">

    <fragment

        android:id="@+id/popularMoviesFragment"
        android:name="com.example.movieapp.ui.fragments.PopularMoviesFragment"
        android:label="PopularMoviesFragment" >
        <action
            android:id="@+id/action_popularMoviesFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.movieapp.ui.fragments.MovieDetailFragment"
        android:label="MovieDetailFragment" >
        <argument
            android:name="movieid"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
</navigation>